<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="stylesheet" href="/css/styles.css">
<title>Chat</title>

<h1>Bienvenido al Chat!</h1>
<div>
    <a href="/profile">
    <button>Mi perfil</button>
    </a>
    <a href="/api/sessions/logout">
    <button>Cerrar Sesión</button>
    </a>
</div>
<div id="chat">
</div>
<div>
    <form id="chatForm" class="flex">
        <label for="user">Estás chateando como:</label>
        <input type="text" id="user" value="{{profileUser.email}}" disabled></input>
        <label for="message">Mensaje</label>
        <input type="text" id="message" name="message">
        <button type="submit" id="chat-button">Enviar</button>
    </form>
</div>
</div>
</div>

<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script type="text/javascript" src="/socket.io/socket.io.js"></script>
<script type="text/javascript" src="/js/indexChat.js"></script>