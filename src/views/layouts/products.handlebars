<meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <title>{{title}}</title>

<div class="flex">
    {{#if dataUser.first_name}}
    <div>
        Bienvenido/a, {{dataUser.first_name}} {{dataUser.last_name}}!
    </div>
    <a href="/profile">
    <button>Mi perfil</button>
    </a>
    <a href="/api/sessions/logout">
    <button>Cerrar Sesión</button>
    </a>
    <h1>Lista de productos:</h1>
    <div>
        <p>Cantidad de productos: {{products.totalDocs}}</p>
        <p>Productos máximos por página: {{products.limit}}</p>
    </div>
    <div id="products">
        {{#each products.docs}}
            <div id={{this._id}} class="product flex"> 
                <h2>{{this.title}}</h2>
                <ul>
                    <li>Precio: $ {{this.price}}</li>
                    <li>Categoria: {{this.category}}</li>
                    <li>Descripción: {{this.description}}</li>
                    <li>Stock: {{this.stock}}</li>
                </ul>
                <button type="submit" id={{this._id}}>Agregar al carrito</button>
            </div>
        {{/each}}
    </div>
{{else}}
<div>
    <h2>
        Tu tiempo de sesión expiró, por favor volvé a loguearte.
    </h2>
    <a href="./">
    <button>
        Volver al Inicio
    </button>
    
    </a>
</div>
{{/if}}
</div> 

